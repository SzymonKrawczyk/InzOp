          <RowConstraints minHeight="10.0" percentHeight="60.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="2">
               <children>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="149.0">
                     <children>
                        <Label text="Wszystkie grupy">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <ListView fx:id="allGroupsListView" maxHeight="-Infinity" maxWidth="-Infinity" />
                     </children>
                  </VBox>
                  <Button layoutX="158.0" layoutY="58.0" mnemonicParsing="false" onAction="#removeSelectedGroups" prefHeight="25.0" prefWidth="50.0" text="&lt;&lt;" />
                  <Button layoutX="158.0" layoutY="100.0" mnemonicParsing="false" onAction="#addSelectedGroups" prefHeight="25.0" prefWidth="50.0" text="&gt;&gt;" />
                   <VBox alignment="CENTER" layoutX="214.0" prefHeight="200.0" prefWidth="149.0">
                       <children>
                           <Label text="Obecne grupy">
                               <font>
                                   <Font size="18.0" />
                               </font>
                           </Label>
                           <ListView fx:id="isInGroupsListView" maxHeight="-Infinity" maxWidth="-Infinity" />
                       </children>
                   </VBox>
               </children>
            </AnchorPane>
            <HBox alignment="CENTER" GridPane.halignment="LEFT" GridPane.valignment="CENTER">
               <children>
                  <Label contentDisplay="RIGHT" text="Nowe hasło: ">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <PasswordField fx:id="editUserPasswordField" onKeyTyped="#checkPassword" promptText="password">
                     <opaqueInsets>
                        <Insets left="200.0" />
                     </opaqueInsets>
                  </PasswordField>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </HBox>
            <Button fx:id="saveUserEditButton" alignment="CENTER" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#saveUser" text="Zapisz" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.valignment="BOTTOM">
               <font>
                  <Font size="18.0" />
               </font>
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
            </Button>
             <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1">
                 <CheckBox fx:id="isAdminCheckbox" layoutX="160.0" layoutY="6.0" mnemonicParsing="false" text="Administrator" />
                 <CheckBox fx:id="isActiveCheckbox" layoutX="160.0" layoutY="26.0" mnemonicParsing="false" text="Aktywny" />
             </AnchorPane>
             <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                 <Button fx:id="deleteUserEditButton" alignment="CENTER" layoutY="139.0" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#deleteUser" prefHeight="39.0" prefWidth="172.0" text="Usuń użytkownika">
                    <font>
                        <Font size="18.0" />
                    </font>
                 </Button>
                 <Label fx:id="ErrorLabelEditUser" layoutX="14.0" layoutY="14.0" text="ErrorLabelEditUser" wrapText="true" />
             </AnchorPane>
            <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1">
               <children>
                  <Label fx:id="errorLabelEdituserPassword" layoutX="14.0" layoutY="14.0" text="errorLabelEdituserPassword" wrapText="true" />
               </children>
            </AnchorPane>
         </children>
      </GridPane>
    </children>
</GridPane>
