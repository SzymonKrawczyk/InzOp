<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="InzOp.PasswordChangeViewController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="30.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" percentHeight="20.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="8.0">
            <children>
                <ImageView fitHeight="50.0" fitWidth="71.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@media/gear.png" />
                    </image>
                </ImageView>
                <Label text="Ustawienia">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
            </children>
            <opaqueInsets>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </opaqueInsets>
        </HBox>
        <Button mnemonicParsing="false" onAction="#goBack" text="Powrót" GridPane.columnIndex="1" GridPane.halignment="RIGHT">
            <padding>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
            </padding>
            <GridPane.margin>
                <Insets bottom="10.0" left="10.0" right="20.0" top="10.0" />
            </GridPane.margin>
        </Button>
      <GridPane hgap="10.0" GridPane.columnSpan="2" GridPane.rowIndex="1">
        <columnConstraints>
          <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" percentWidth="62.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="49.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="10.0" minWidth="10.0" percentWidth="40.0" prefWidth="10.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Obecne hasło: " />
            <Label text="Nowe hasło:" GridPane.rowIndex="1" />
            <PasswordField fx:id="currentPasswordField" maxWidth="-Infinity" promptText=". . ." GridPane.columnIndex="1" />
            <PasswordField fx:id="newPasswordField" maxHeight="-Infinity" maxWidth="-Infinity" onKeyTyped="#checkNewPassword" promptText=". . ." GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label fx:id="ErrorCurrentPasswordLabel" text="ErrorCurrentPasswordLabel" wrapText="true" GridPane.columnIndex="2" />
            <Label fx:id="ErrorNewPasswordLabel" text="ErrorNewPasswordLabel" wrapText="true" GridPane.columnIndex="2" GridPane.rowIndex="1" />
         </children>
         <GridPane.margin>
            <Insets bottom="20.0" top="20.0" />
         </GridPane.margin>
      </GridPane>
      <Button fx:id="changePasswordButton" mnemonicParsing="false" onAction="#saveNewPassword" text="Zmień hasło" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="2">
         <font>
            <Font size="14.0" />
         </font>
         <padding>
            <Insets bottom="4.0" left="12.0" right="12.0" top="4.0" />
         </padding>
      </Button>
    </children>
</GridPane>
